<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trendingmovieslayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:layout_margin="0dp">

    <ImageView
        android:id="@+id/trendingmoviesimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_weight="1"
        android:layout_margin="0dp"/>
    <TextView
        android:id="@+id/trendingmovieratingnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/trendingmovierating"
        android:textColor="@color/colorAccent"
        android:shadowColor="@color/darkBackground"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1" />
    <RatingBar
        android:id="@+id/trendingmovierating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:progressTint="@android:color/holo_orange_light"
        android:progressBackgroundTint="@android:color/white" />
</RelativeLayout>